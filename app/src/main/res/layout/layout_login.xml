<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/boxshadow_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="100dp"

        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/button_selector"
        android:src="@drawable/bookphoto"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:text="4T BOOK SHOP"/>
    <LinearLayout
        android:background="@drawable/boxshadow"
        style="@style/linearParent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="Login"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/editTextEmail"
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorHint="@color/black"
                android:hint="@string/login_email_hint"/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/editTextPassword"
                style="@style/modifiedEditText"
                android:hint="@string/login_password_hint"
                android:maxLines="1"
                android:textColorHint="@color/black"
                android:inputType="textPassword"/>

        <TextView
            android:id="@+id/tv_fotgot"
            style="@style/viewParent"
            android:text="Forgot Password?"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize"
            android:layout_gravity="end"
            android:onClick="viewForgotPAssword"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/cirLoginButton"
            android:background="@drawable/button_selector"
            style="@style/loginButton"
            android:text="Login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <TextView
            android:id="@+id/want_signup"
            style="@style/parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:text="@string/login_signup_hint"
            android:onClick="viewloginclicked"
            android:layout_marginTop="@dimen/loginViewsMargin"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_loginWithAmin"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="login with Admin"/>
</LinearLayout>