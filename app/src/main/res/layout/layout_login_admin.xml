<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/boxshadow_background">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/button_selector"
        android:src="@drawable/bookphoto"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:text="4T BOOK SHOP"/>
    <LinearLayout
        android:background="@drawable/boxshadow"
        style="@style/linearParent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="Login With Admin"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/emailAdmin"
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorHint="@color/black"
                android:hint="@string/login_email_hint"/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/passwordAdmin"
                style="@style/modifiedEditText"
                android:hint="@string/login_password_hint"
                android:maxLines="1"
                android:textColorHint="@color/black"
                android:inputType="textPassword"/>

        <Button
            android:id="@+id/btn_AdminLogin"
            style="@style/loginButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:background="@drawable/button_selector"
            android:text="Login" />
    </LinearLayout>

</LinearLayout>